{
  "name": "json-store",
  "displayName": "JSON Store",
  "description": "还在网站中美化JSON吗？试试这个插件吧。不需要在工作目录中手动创建JSON文件，点击按钮即可创建，使用VSCode美化JSON吧",
  "version": "0.0.7",
  "publisher": "HeXinyu",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/HxinY499/json-store-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Extension Packs"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-store.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "json-store.addFile",
        "title": "新建json文件到JSON Store",
        "icon": "$(file-add)"
      },
      {
        "command": "json-store.addFolder",
        "title": "新建文件夹到JSON Store",
        "icon": "$(file-directory-create)"
      },
      {
        "command": "json-store.delete",
        "title": "删除",
        "icon": "$(trash)"
      },
      {
        "command": "json-store.renameItem",
        "title": "重命名",
        "icon": "$(edit)"
      },
      {
        "command": "json-store.saveToStore",
        "title": "保存到 JSON Store"
      },
      {
        "command": "json-store.saveToStoreAndDeleteSource",
        "title": "保存到 JSON Store 并删除原文件"
      },
      {
        "command": "json-store.cloudDownload",
        "title": "下载到JSON Store",
        "icon": "$(cloud-download)"
      },
      {
        "command": "json-store.openInExplorer",
        "title": "在系统文件管理器中打开",
        "icon": "$(folder-opened)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "json-store-explorer",
          "title": "JSON Store",
          "icon": "./images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "json-store-explorer": [
        {
          "id": "json-store-view",
          "name": "JSON Store",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "json-store.refresh",
          "when": "view == json-store-view",
          "group": "navigation"
        },
        {
          "command": "json-store.addFile",
          "when": "view == json-store-view",
          "group": "navigation"
        },
        {
          "command": "json-store.addFolder",
          "when": "view == json-store-view",
          "group": "navigation"
        },
        {
          "command": "json-store.cloudDownload",
          "when": "view == json-store-view",
          "group": "navigation"
        },
        {
          "command": "json-store.openInExplorer",
          "when": "view == json-store-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "json-store.renameItem",
          "when": "view == json-store-view && (viewItem == file || viewItem == folder)"
        },
        {
          "command": "json-store.addFile",
          "when": "view == json-store-view && viewItem == folder",
          "group": "inline@1"
        },
        {
          "command": "json-store.addFolder",
          "when": "view == json-store-view && viewItem == folder",
          "group": "inline@2"
        },
        {
          "command": "json-store.delete",
          "when": "view == json-store-view && (viewItem == file || viewItem == folder)",
          "group": "inline@3"
        }
      ],
      "editor/title": [
        {
          "command": "json-store.saveToStore",
          "when": "resourceExtname == .json",
          "group": "1_modification"
        },
        {
          "command": "json-store.saveToStoreAndDeleteSource",
          "when": "resourceExtname == .json",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "JSON Store",
      "properties": {
        "json-store.basePath": {
          "type": "string",
          "default": "",
          "description": "JSON Store 的基础路径。如果为空，将使用默认路径 ~/.json-store-vscode-extension",
          "scope": "window"
        }
      }
    },
    "keybindings": [
      {
        "command": "json-store.renameItem",
        "key": "F2",
        "when": "focusedView == json-store-view && !inputFocus"
      },
      {
        "command": "json-store.renameItem",
        "key": "Enter",
        "when": "focusedView == json-store-view && !inputFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "eslint": "^9.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4"
  },
  "dependencies": {}
}
